{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "checkJs": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "types": ["vite/client"],
    "isolatedModules": true,
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*",
    "./src/assets/**/*",
  ],
}
